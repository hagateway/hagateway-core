{
    "name": "hagateway-core",
    "workspaces": [
        "packages/api",
        "packages/server",
        "packages/serverkit-*",
        "packages/clientkit.frontend",
        "packages/clientkit",
        "packages/scripts-*",
        "packages/*"
    ],
    "devDependencies": {
        "@changesets/cli": "^2.29.2"
    },
    "scripts": {
        "log-changes": "npx @changesets/cli",
        "bump-version": "npx @changesets/cli version",
        "build": "npm install && npm run build --workspaces",
        "release": "npm install && npx @changesets/cli publish"
    }
}
