{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "rewriteRelativeImportExtensions": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
  },
  "include": ["lib", "src"]
}